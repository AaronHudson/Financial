@model Financial.Web.Models.Budget

@{
    ViewBag.Title = Model.Title;
}

<div>
    <h4>@Model.Title</h4>
    <hr />
    <table class="table">
        <tr>
            <td>
                Category
            </td>
            <td>
                Available
            </td>
            <td>
                Limit
            </td>
        </tr>
        @foreach (Financial.Web.Models.Category category in Model.Categories)
        {
            <tr>
                <td>
                    @Html.ActionLink(category.Title, "Details", "Categories", new { id = category.Id }, null)
                    <hr />
                    @category.Description
                </td>
                <td>
                    @category.Balance.ToString()
                </td>
                <td>
                    @category.Limit.ToString()
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Create a category", "Create", "Categories", new { categoryId = Model.Id }, null) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to budgets", "StartPage", "Home")
</p>
