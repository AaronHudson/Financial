@model Financial.Web.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Created On
        </dt>
        <dt>
            Title
        </dt>
        <dt>
            Description
        </dt>
        <dt>
            Amount
        </dt>
        @foreach (var item in Model.Transactions)
        {
            <dd>
                @item.CreatedOn
            </dd>
            <dd>
                @item.Title
            </dd>
            <dd>
                @item.Description
            </dd>
            <dd>
                @item.Amount
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to budgets", "StartPage", "Home") |
    @Html.ActionLink("Add a transaction", "Create", "Transactions", new { categoryId = Model.Id }, null)
</p>
